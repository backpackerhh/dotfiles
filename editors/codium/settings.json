{
    "syncSettings.crons": {
        "upload": "0 12 * * *" // at 12PM, every day
    },
    "workbench.colorTheme": "Default Light Modern",
    "editor.minimap.enabled": false,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        120
    ],
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.excludeGitIgnore": false,
    "search.useGlobalIgnoreFiles": false,
    "search.useIgnoreFiles": false,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "security.workspace.trust.untrustedFiles": "open",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.renderWhitespace": "boundary",
    "workbench.tree.indent": 15,
    "explorer.compactFolders": false,
    "editor.lineHeight": 1.6,
    "editor.dragAndDrop": false,
    "breadcrumbs.symbolPath": "off",
    "editor.acceptSuggestionOnEnter": "on",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.lightbulb.enabled": false,
    "editor.codeActionsOnSave": {
        "source.addMissingImports": true,
    },
    "vscodeWorkspaceSwitcher.paths": [
        "~/Documents/Projects/00-codium-workspaces"
    ],
    "vscodeWorkspaceSwitcher.showInActivityBar": false,
    "vscodeWorkspaceSwitcher.showInExplorer": true,
    "vscodeWorkspaceSwitcher.showTreeView": false,
    "workbench.statusBar.visible": false,
    "workbench.activityBar.visible": false,
    "workbench.startupEditor": "none",
}
